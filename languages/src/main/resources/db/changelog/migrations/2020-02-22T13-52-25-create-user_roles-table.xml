<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="2020-02-22T13-52-25-create-user_roles-table.xml" author="vladimir_glinskii">
        <createTable tableName="user_role">
            <column name="id" type="int" autoIncrement="true" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="int" >
                <constraints nullable="false" deleteCascade="true"
                             foreignKeyName="user_role_user_id" referencedTableName="user" referencedColumnNames="id"/>
            </column>
            <column name="role_id" type="int" >
                <constraints nullable="false" deleteCascade="true"
                             foreignKeyName="user_role_role_id" referencedTableName="role" referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
